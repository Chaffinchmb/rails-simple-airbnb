<h1>All our flats</h1>

<div class="row">
  <div class="col-md-4">
    <ul>
      <% @flats.each do |flat| %>
        <div class="flat-card">
          <li><%= flat.name %></li>
          <li><%= flat.address %></li>
          <li><i class="fa-solid fa-euro-sign"> </i><%= flat.price_per_night %></li>
          <li><i class="fa-solid fa-people-group"></i> <%= flat.number_of_guests %></li>
        </div>
      <% end %>
    </ul>
  </div>
</div>
